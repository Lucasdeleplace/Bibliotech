@{
	ViewData["Title"] = "Livre";
}
@model List<Livre>

<div class="text-center">
	<h1 class="display-4">Livre</h1>
	<a asp-controller="Livre" asp-action="CreateEditLivre" class="btn btn-primary"> Ajouter</a>
	<br />

	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Titre
				</th>
				<th>
					Auteur
				</th>
				<th>
					Isbn
				</th>
				<th>
					Disponibilité
				</th>
				<th>
					Actions
				</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var livre in Model)
				{
					<tr>
						<td>
							@livre.Id
						</td>
						<td>
							@livre.Titre
						</td>
						<td>
							@livre.Auteur
						</td>
						<td>
							@livre.Isbn
						</td>
						<td>
							@livre.Disponibilite
						</td>

						<td>
							<a class="btn btn-primary" asp-action="CreateEditLivre" asp-route-id="@livre.Id">Modifier</a>
							<form asp-action="DeleteLivre" asp-route-id="@livre.Id" method="post" style="display:inline;">
								<button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?');">Delete</button>
								<input type="hidden" name="_method" value="DELETE" />
							</form>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>