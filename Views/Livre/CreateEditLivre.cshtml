@{
	ViewData["Title"] = "Create / Edit";
} 
@model bibliotech.Models.Livre

<div class="text-center">
    <h1 class="display-4">Ajouter ou modifier un Livre</h1>
</div>

<form asp-controller="Livre" asp-action="CreateEditLivreForm">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="Titre" class="form-label">Titre</label>
        <input required class="form-control" type="text" asp-for="Titre" placeholder="Entrez le titre du livre" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Auteur" class="form-label">Auteur</label>
        <input class="form-control" type="text" asp-for="Auteur" placeholder="Entrez le nom de l'auteur" />
        <span asp-validation-for="Auteur" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Isbn" class="form-label">ISBN</label>
		<input required min="1000000000000" max="9999999999999" class="form-control" type="number" asp-for="Isbn" placeholder="Entrez le numéro ISBN" />
        <span asp-validation-for="Isbn" class="text-danger"></span>
    </div>


    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" checked asp-for="Disponibilite" />
        <label asp-for="Disponibilite" class="form-check-label">Disponible</label>
    </div>


    <button class="btn btn-primary mt-4" type="submit">Enregistrer</button>
</form>





	

